<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1731F"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageLogoItau"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:src="@drawable/logo_itau"
        app:layout_constraintVertical_bias="0.4"
        android:layout_marginBottom="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonLevelOne"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/buttonLevelOne"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Nível 1"
        android:textColor="#F1731F"
        app:layout_constraintTop_toBottomOf="@id/imageLogoItau"
        app:layout_constraintBottom_toTopOf="@id/buttonLevelTwo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/buttonLevelTwo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Nível 2"
        android:textColor="#F1731F"
        app:layout_constraintBottom_toTopOf="@id/buttonLevelThree"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonLevelOne" />

    <Button
        android:id="@+id/buttonLevelThree"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Nível 3"
        android:textColor="#F1731F"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonLevelTwo" />

</androidx.constraintlayout.widget.ConstraintLayout>